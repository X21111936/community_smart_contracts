              <script>
                function showMsg() {
                  var email = document.getElementById('email').value;
                  document.getElementById('successMsg').style.display = 'block';
                  document.getElementById('successMsg').innerHTML = `Message has been successfully sent to ${email}!`;
                  document.getElementById('myForm').reset();
                }
              </script>
           </head>
           <body>

            <div class="jumbotron">
                <h1 class="display-4">Midland Wind Energy</h1>
                <p class="lead">Contact Us</p>
                <hr class="my-4">
                <p></p>
              </div>

              <div class="container">
                <div class="row">
                  <div class="col">
                    <table class="table table-bordered table-hover">
                      <thead class="thead-inverse">
                        <tr>
                          <th>Location</th>
                          <th>Monday - Friday</th>
                          <th>Weekends</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td>
                              <strong>Midland Wind Energy</strong><br>
                              DerryLough,<br>
                              Co. Offaly,<br>
                              Ireland,<br>
                              R42 V440<br>
                              mwe@gmail.com<br>
                          </td>
                          <td>
                          <label>Mon.</label> 8:30 am - 5:30 pm<br>
                          <label>Tue.</label> 8:30 am - 5:30 pm<br>
                          <label>Wed.</label>  8:30 am - 5:30 pm<br>
                          <label>Thu.</label> 8:30 am - 5:30 pm<br>
                          <label>Fri.</label> 8:30 am - 5:30 pm<br>
                          </td>
                          <td>
