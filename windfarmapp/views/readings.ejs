  <table class="weathertable">
    <thead></thead>
    <tbody></tbody>
  </table>
  
  <div class="container">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Date and Time</th>
          <th scope="col">Wind Direction</th>
          <th scope="col">Wind Gust</th>
          <th scope="col">Wind Speed</th>
          <th scope="col">Noise levels</th>
        </tr>
      </thead>
      <tbody>
        <% if (accuWeatherWindData && accuWeatherWindData.length> 0) { %>
          <% accuWeatherWindData.forEach(row=> { %>
            <tr>
              <td>
                <%= new Date(row.epochTime).toLocaleString() %>
              </td>
              <td>
                <%= row.direction.degrees %> Â° <%= row.direction.english %>
              </td>
              <td>
                <%= row.gust.value %> <%= row.gust.unit %>
              </td>
              <td>
                <%= row.speed.value %> <%= row.speed.unit %>
              </td>
              <td>
                <%= row.noiseLevel %>
              </td>
            </tr>
            <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5">
                    <% if (error) { %>
                      Error: <%= error.message %>
                    <% } else { %>
                      No wind data available
                    <% } %>
                  </td>
                </tr>
                <% } %>
      </tbody>
    </table>
  </div>

